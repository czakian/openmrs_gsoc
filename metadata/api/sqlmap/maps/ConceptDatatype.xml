<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
	PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
	"http://www.ibatis.com/dtd/sql-map-2.dtd">
 
<sqlMap namespace="org.openmrs.ConceptDatatype">

<!-- ************************************************************ -->
<!-- ** Creation                                               ** -->
<!-- ************************************************************ -->

<insert id="createConceptDatatype" parameterClass="org.openmrs.ConceptDatatype">
	INSERT INTO concept_datatype
		(
		name,
		datatype_abbreviation,
		description,
		creator,
		date_created
		)
	VALUES
		(
		#name#,
		#datatypeAbbreviation#,
		#description#,
		#creator.userId#,
		NOW()
		);
	<selectKey keyProperty="encounterId">
		SELECT LAST_INSERT_ID() AS conceptDatatypeId
	</selectKey>
</insert>

<!-- ************************************************************ -->
<!-- ** Read                                                   ** -->
<!-- ************************************************************ -->

<resultMap id="conceptDatatypeResult" class="org.openmrs.ConceptDatatype">
	<result property="conceptDatatypeId" column="concept_datatype_id" />
	<result property="name" column="name" />
	<result property="datatypeAbbreviation" column="datatype_abbreviation" />
	<result property="description" column="description"/>
	<result property="creator" column="creator" select="getUser" />
	<result property="dateCreated" column="date_created" />
</resultMap>

<select id="getConceptDatatype" parameterClass="int" resultMap="conceptDatatypeResult">
	SELECT * FROM concept_datatype WHERE concept_datatype_id = #value#
</select>

<!-- ************************************************************ -->
<!-- ** Update                                                 ** -->
<!-- ************************************************************ -->

<update id="updateConceptDatatype" parameterClass="org.openmrs.ConceptDatatype">
	UPDATE
		concept_datatype
	SET
		name = #name#,
		datatype_abbreviation = #datatypeAbbreviation#,
		description = #description#
	WHERE
		concept_datatype_id = #conceptDatatypeId#
</update>

<!-- ************************************************************ -->
<!-- ** Delete                                                 ** -->
<!-- ************************************************************ -->

<delete id="deleteConceptDatatype" parameterClass="int">
	DELETE FROM concept_datatype WHERE concept_datatype_id = #value#
</delete>

</sqlMap>