<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
	PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="org.openmrs.ConceptSynonym">

<!-- ************************************************************ -->
<!-- ** Creation                                               ** -->
<!-- ************************************************************ -->

<insert id="createConceptSynonym" parameterClass="org.openmrs.ConceptSynonym">
	INSERT INTO concept_synonym
		(
		concept_id,
		synonym,
		locale,
		creator,
		date_created
		)
	VALUES
		(
		#concept.conceptId#,
		#synonym#,
		#locale#,
		#creator.userId#,
		NOW()
		);
</insert>

<!-- ************************************************************ -->
<!-- ** Read                                                   ** -->
<!-- ************************************************************ -->

<resultMap id="conceptSynonymResult" class="org.openmrs.ConceptSynonym">
	<result property="concept" column="concept_id" select="getConcept" />
	<result property="synonym" column="synonym" />
	<result property="locale" column="locale" />
	<result property="creator" column="creator" select="getUser" />
	<result property="dateCreated" column="date_created" />
</resultMap>

<select id="getConceptSynonym" parameterClass="org.openmrs.ConceptSynonym"
        resultMap="conceptSynonymResult">
	SELECT * FROM concept_synonym
	WHERE
		concept_id = #concept.conceptId# AND
		synonym = #synonym#
</select>

<select id="getConceptSynonymByConceptId" parameterClass="int"
        resultMap="conceptSynonymResult">
	SELECT * FROM concept_synonym WHERE concept_id = #value#
</select>

<!-- ************************************************************ -->
<!-- ** Update                                                 ** -->
<!-- ************************************************************ -->

<update id="updateConceptSynonym" parameterClass="org.openmrs.ConceptSynonym">
	UPDATE
		concept_synonym
	SET
		locale = #locale#,
	WHERE
		concept_id = #concept.conceptId# AND
		synonym = #synonym#
</update>

<!-- ************************************************************ -->
<!-- ** Deletion                                               ** -->
<!-- ************************************************************ -->

<delete id="deleteConceptSynonym" parameterClass="org.openmrs.ConceptSynonym">
	DELETE FROM concept_synonym
	WHERE
		concept_id = #concept.conceptId# AND
		synonym = #synonym#
</delete>

</sqlMap>