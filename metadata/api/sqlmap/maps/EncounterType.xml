<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
	PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
	"http://www.ibatis.com/dtd/sql-map-2.dtd">
 
<sqlMap namespace="org.openmrs.EncounterType">

<!-- ************************************************************ -->
<!-- ** Creation                                               ** -->
<!-- ************************************************************ -->

<insert id="createEncounterType" parameterClass="org.openmrs.EncounterType">
	INSERT INTO encounter_type
		(
		name,
		description,
		creator,
		date_created
		)
	VALUES
		(
		#name#,
		#description#,
		#creator.userId#,
		NOW()
		);
	<selectKey keyProperty="encounterTypeId">
		SELECT LAST_INSERT_ID() AS encounterTypeId
	</selectKey>
</insert>

<!-- ************************************************************ -->
<!-- ** Read                                                   ** -->
<!-- ************************************************************ -->

<resultMap id="encounterTypeResult" class="org.openmrs.EncounterType">
	<result property="encounterTypeId" column="encounter_type_id" />
	<result property="name" column="name" />
	<result property="description" column="description"/>
	<result property="creator" column="creator" select="getUser" />
	<result property="dateCreated" column="date_created" />
</resultMap>

<select id="getEncounterType" parameterClass="int" resultMap="encounterTypeResult">
	SELECT * FROM encounter_type WHERE encounter_type_id = #value#
</select>

<select id="getAllEncounterTypes" resultMap="encounterTypeResult">
	SELECT * FROM encounter_type
</select>

<!-- ************************************************************ -->
<!-- ** Update                                                 ** -->
<!-- ************************************************************ -->

<update id="updateEncounterType" parameterClass="org.openmrs.EncounterType">
	UPDATE
		encounter_type
	SET
		name = #name#,
		description = #description#
	WHERE
		encounter_type_id = #encounterTypeId#
</update>

<!-- ************************************************************ -->
<!-- ** Delete                                                 ** -->
<!-- ************************************************************ -->

<delete id="deleteEncounterType" parameterClass="int">
	DELETE FROM encounter_type WHERE encounter_type_id = #value#
</delete>

</sqlMap>