<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
	PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="org.openmrs.OrderType">

<!-- ************************************************************ -->
<!-- ** Creation                                               ** -->
<!-- ************************************************************ -->

<insert id="createOrderType" parameterClass="org.openmrs.OrderType">
	INSERT INTO order_type
		(
		name,
		description,
		creator,
		date_created
		)
	VALUES
		(
		#name#,
		#description#,
		#creator.userId#,
		NOW()
		);
	<selectKey keyProperty="orderTypeId">
		SELECT LAST_INSERT_ID() AS orderTypeId
	</selectKey>
</insert>

<!-- ************************************************************ -->
<!-- ** Read                                                   ** -->
<!-- ************************************************************ -->

<resultMap id="orderTypeResult" class="org.openmrs.OrderType">
	<result property="orderTypeId" column="order_type_id" />
	<result property="name" column="name" />
	<result property="description" column="description" />
	<result property="creator" column="creator" select="getUser" />
	<result property="dateCreated" column="date_created" />
</resultMap>

<select id="getOrderType" parameterClass="int"
        resultMap="orderTypeResult">
	SELECT * FROM order_type WHERE order_type_id = #value#
</select>

<select id="getAllOrderTypes" resultMap="orderTypeResult">
	SELECT * FROM order_type
</select>


<!-- ************************************************************ -->
<!-- ** Update                                                 ** -->
<!-- ************************************************************ -->

<update id="updateOrderType" parameterClass="org.openmrs.OrderType">
	UPDATE
		order_type
	SET
		name = #name#,
		description = #description#
	WHERE
		order_type_id = #orderTypeId#
</update>

<!-- ************************************************************ -->
<!-- ** Deletion                                               ** -->
<!-- ************************************************************ -->

<delete id="deleteOrderType" parameterClass="int">
	DELETE FROM order_type WHERE order_type_id = #value#
</delete>

</sqlMap>