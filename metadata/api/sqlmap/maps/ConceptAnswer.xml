<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
	PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="org.openmrs.ConceptAnswer">

<!-- ************************************************************ -->
<!-- ** Creation                                               ** -->
<!-- ************************************************************ -->

<insert id="createConceptAnswer" parameterClass="org.openmrs.ConceptAnswer">
	INSERT INTO concept_answer
		(
		concept_id,
		answer_concept,
		answer_drug,
		creator,
		date_created
		)
	VALUES
		(
		#concept.conceptId#,
		#answerConcept.conceptId#,
		#answerDrug.conceptId#,
		#creator.userId#,
		NOW()
		);
</insert>

<!-- ************************************************************ -->
<!-- ** Read                                                   ** -->
<!-- ************************************************************ -->

<resultMap id="conceptAnswerResult" class="org.openmrs.ConceptAnswer">
	<result property="conceptAnswerId" column="concept_answer_id" />
	<result property="concept" column="concept_id" select="getConcept" />
	<result property="answerConcept" column="answer_concept" select="getConcept" />
	<result property="answerDrug" column="answer_drug" select="getDrug" />
	<result property="creator" column="creator" select="getUser" />
	<result property="dateCreated" column="date_created" />
</resultMap>

<select id="getConceptAnswer" parameterClass="org.openmrs.ConceptAnswer"
        resultMap="conceptAnswerResult">
	SELECT * FROM concept_answer WHERE concept_answer_id = #conceptAnswerId#
</select>

<select id="getConceptAnswerByConceptId" parameterClass="int"
        resultMap="conceptAnswerResult">
	SELECT * FROM concept_answer WHERE concept_id = #value#
</select>

<!-- ************************************************************ -->
<!-- ** Update                                                 ** -->
<!-- ************************************************************ -->

<update id="updateConceptAnswer" parameterClass="org.openmrs.ConceptAnswer">
	UPDATE
		concept_answer
	SET
		concept_id = "concept.conceptId#,
		answer_concept = #answerConcept.conceptId#,
		answer_drug = #answerDrug.conceptId#
	WHERE
		concept_answer_id = #conceptAnswerId#
</update>

<!-- ************************************************************ -->
<!-- ** Deletion                                               ** -->
<!-- ************************************************************ -->

<delete id="deleteConceptAnswer" parameterClass="org.openmrs.ConceptAnswer">
	DELETE FROM concept_answer WHERE concept_answer_id = #conceptAnswerId#
</delete>

</sqlMap>