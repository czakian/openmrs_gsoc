<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
	PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="org.openmrs.Location">

<!-- ************************************************************ -->
<!-- ** Creation                                               ** -->
<!-- ************************************************************ -->

<insert id="createLocation" parameterClass="org.openmrs.Location">
	INSERT INTO location
		(
		name,
		description,
		address1,
		address2,
		city_village,
		state_province,
		country,
		postal_code,
		latitude,
		longitude,
		creator,
		date_created
		)
	VALUES
		(
		#name#,
		#description#,
		#address1#,
		#address2#,
		#cityVillage#,
		#stateProvince#,
		#country#,
		#postalCode#,
		#latitude#,
		#longitude#,
		#creator.userId#,
		NOW()
		);
	<selectKey keyProperty="locationId">
		SELECT LAST_INSERT_ID() AS locationId
	</selectKey>
</insert>

<!-- ************************************************************ -->
<!-- ** Read                                                   ** -->
<!-- ************************************************************ -->

<resultMap id="locationResult" class="org.openmrs.Location">
	<result property="locationId" column="location_id" />
	<result property="name" column="name" />
	<result property="description" column="description" />
	<result property="address1" column="address1" />
	<result property="address2" column="address2" />
	<result property="cityVillage" column="city_village" />
	<result property="stateProvince" column="state_province" />
	<result property="country" column="country" />
	<result property="postalCode" column="postal_code" />
	<result property="latitude" column="latitude" />
	<result property="longitude" column="longitude" />
	<result property="creator" column="creator" select="getUser" />
	<result property="dateCreated" column="date_created" />
</resultMap>

<select id="getLocation" parameterClass="int" resultMap="locationResult">
	SELECT * FROM location WHERE location_id = #value#
</select>

<select id="getAllLocations" resultMap="locationResult">
	SELECT * FROM location
</select>

<!-- ************************************************************ -->
<!-- ** Update                                                 ** -->
<!-- ************************************************************ -->

<update id="updateLocation" parameterClass="org.openmrs.Location">
	UPDATE
		location
	SET
		name = #name#,
		description = #description#,
		address1 = #address1#,
		address2 = #address2#,
		city_village = #cityVillage#,
		state_province = #stateProvince#,
		country = #country#,
		postal_code = #postalCode#,
		latitude = #latitude#,
		longitude = #longitude#
	WHERE
		location_id = #locationId#
</update>

<!-- ************************************************************ -->
<!-- ** Deletion                                               ** -->
<!-- ************************************************************ -->

<delete id="deleteLocation" parameterClass="int">
	DELETE FROM location WHERE location_id = #value#
</delete>

</sqlMap>