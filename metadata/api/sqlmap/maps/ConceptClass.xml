<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
	PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
	"http://www.ibatis.com/dtd/sql-map-2.dtd">
 
<sqlMap namespace="org.openmrs.ConceptClass">

<!-- ************************************************************ -->
<!-- ** Creation                                               ** -->
<!-- ************************************************************ -->

<insert id="createConceptClass" parameterClass="org.openmrs.ConceptClass">
	INSERT INTO concept_class
		(
		name,
		description,
		is_set,
		creator,
		date_created
		)
	VALUES
		(
		#name#,
		#description#,
		#set#,
		#creator.userId#,
		NOW()
		);
	<selectKey keyProperty="encounterId">
		SELECT LAST_INSERT_ID() AS conceptClassId
	</selectKey>
</insert>

<!-- ************************************************************ -->
<!-- ** Read                                                   ** -->
<!-- ************************************************************ -->

<resultMap id="conceptClassResult" class="org.openmrs.ConceptClass">
	<result property="conceptClassId" column="concept_class_id" />
	<result property="name" column="name" />
	<result property="description" column="description"/>
	<result property="set" column="is_set" nullValue="false" />
	<result property="creator" column="creator" select="getUser" />
	<result property="dateCreated" column="date_created" />
</resultMap>

<select id="getConceptClass" parameterClass="int" resultMap="conceptClassResult">
	SELECT * FROM concept_class WHERE concept_class_id = #value#
</select>

<!-- ************************************************************ -->
<!-- ** Update                                                 ** -->
<!-- ************************************************************ -->

<update id="updateConceptClass" parameterClass="org.openmrs.ConceptClass">
	UPDATE
		concept_class
	SET
		name = #name#,
		description = #description#,
		is_set = #set#
	WHERE
		concept_class_id = #conceptClassId#
</update>

<!-- ************************************************************ -->
<!-- ** Delete                                                 ** -->
<!-- ************************************************************ -->

<delete id="deleteConceptClass" parameterClass="int">
	DELETE FROM concept_class WHERE concept_class_id = #value#
</delete>

</sqlMap>