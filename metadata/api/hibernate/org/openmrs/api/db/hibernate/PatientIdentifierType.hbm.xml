<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping package="org.openmrs">
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="org.openmrs.PatientIdentifierType" 
    table="patient_identifier_type"
>

    <id
        name="patientIdentifierTypeId"
        type="java.lang.Integer"
        column="patient_identifier_type_id"
        unsaved-value="0"
    >
        <generator class="native" />
    </id>

    <discriminator column="patient_identifier_type_id" insert="false" />
		
	<property
        name="name"
        type="java.lang.String"
        column="name"
        not-null="true"
        length="50"
    />
    <property
        name="description"
        type="java.lang.String"
        column="description"
        not-null="true"
        length="65535"
    />
    <property
        name="format"
        type="java.lang.String"
        column="format"
        length="50"
    />

    <property
        name="formatDescription"
        type="java.lang.String"
        column="format_description"
        length="250"
    />
    
    <property name="checkDigit" type="boolean" column="check_digit" not-null="true"/>

    <property name="required" type="boolean" column="required" not-null="true"/>
    
    <property
        name="dateCreated"
        type="java.util.Date"
        column="date_created"
        not-null="true"
        length="19"
    />

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to PatientIdentifier -->
    <!--
    <set
        name="patientIdentifiers"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="identifier_type" />
        </key>
        <one-to-many 
            class="org.openmrs.PatientIdentifier"
        />
    </set>
    -->
    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="creator"
        class="org.openmrs.User"
        not-null="true"
    >
        <column name="creator" />
    </many-to-one>

</class>
</hibernate-mapping>
