<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs">

	<class name="Privilege" table="privilege">

		<id name="privilegeId" type="java.lang.Integer" column="privilege_id"
			unsaved-value="undefined">
			<generator class="native" />
		</id>

		<discriminator column="privilege_id" insert="false" />

		<property name="uuid" type="java.lang.String"
			column="uuid" length="38" unique="true" />

		<property name="privilege" type="java.lang.String" column="privilege"
			unique="true" />

		<property name="description" type="java.lang.String" column="description"
			not-null="true" length="250" />
			
	</class>
</hibernate-mapping>
