<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs">

	<class name="PatientName" table="patient_name">

		<id name="patientNameId" type="java.lang.Integer"
			column="patient_name_id" unsaved-value="0">
			<generator class="native" />
		</id>

		<property name="preferred" type="boolean" column="preferred" not-null="true"/>

		<many-to-one name="patient" class="Patient">
			<column name="patient_id" />
		</many-to-one>

		<!--
			Several of the PatientName properties are mapped using field-level
		    access (i.e. access=field) to allow for names to be obscured for 
		    demonstration purposes while Hibernate can continue to access the
		    "real" names behind the scenes
		-->

		<property name="prefix" type="java.lang.String" access="field"
			column="prefix" length="50" />
		
		<property name="givenName" type="java.lang.String" access="field"
			column="given_name" length="50" />

		<property name="middleName" type="java.lang.String" access="field"
			column="middle_name" length="50" />

		<property name="familyNamePrefix" type="java.lang.String" access="field"
			column="family_name_prefix" length="50" />

		<property name="familyName" type="java.lang.String" access="field"
			column="family_name" length="50" />

		<property name="familyName2" type="java.lang.String" access="field"
			column="family_name2" length="50" />

		<property name="familyNameSuffix" type="java.lang.String" access="field"
			column="family_name_suffix" length="50" />

		<property name="degree" type="java.lang.String" column="degree" access="field"
			length="50" />

		<many-to-one name="creator" class="User">
			<column name="creator" />
		</many-to-one>

		<property name="dateCreated" type="java.util.Date"
			column="date_created" not-null="true" length="19" />

		<many-to-one name="changedBy" class="User">
			<column name="changed_by" />
		</many-to-one>

		<property name="dateChanged" type="java.util.Date"
			column="date_changed" length="19" />

		<many-to-one name="voidedBy" class="User" column="voided_by" />

		<property name="dateVoided" type="java.util.Date"
			column="date_voided" length="19" />

		<property name="voidReason" type="java.lang.String"
			column="void_reason" length="255" />
			
		<property name="voided" type="boolean" column="voided" length="1" not-null="true" />
		
	</class>

</hibernate-mapping>
