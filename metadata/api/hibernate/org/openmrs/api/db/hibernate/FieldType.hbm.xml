            <column name="field_type" />
        </key>
        <one-to-many 
            class="org.openmrs.Field"
        />
    </set>
    -->
    
    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="creator"
        class="org.openmrs.User"
        not-null="true"
    >
        <column name="creator" />
    </many-to-one>

</class>
</hibernate-mapping>
