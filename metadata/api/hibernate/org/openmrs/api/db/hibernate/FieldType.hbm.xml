<class 
    name="org.openmrs.FieldType" 
    table="field_type"
>

    <id
        name="fieldTypeId"
        type="int"
        column="field_type_id"
        unsaved-value="0"
    >
        <generator class="native" />
    </id>
    
    <discriminator column="field_type_id" insert="false" />

		<property name="uuid" type="java.lang.String"
			column="uuid" length="36" unique="true" />

    <property
        name="name"
        type="java.lang.String"
        column="name"
        length="50"
    />
    <property
        name="description"
        type="java.lang.String"
        column="description"
        length="2147483647"
    />
    <property
        name="isSet"
        type="boolean"
        column="is_set"
        length="1"
        not-null="true"
    />
    <property
        name="dateCreated"
        type="java.util.Date"
        column="date_created"
        not-null="true"
        length="19"
    />

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to Field -->
    <!--
    <set
        name="fields"
        lazy="true"
        inverse="true"
		cascade="none"
